{
  "name": "password-manager",
  "private": true,
  "scripts": {
    "dev-api": "next dev",
    "start": "next start",
    "vercel-build": "prisma generate && prisma migrate deploy && next build",
    "dev-extension": "npm-watch",
    "build": "next build && next export && npm run lint:build",
    "lint:build": "mv out/_next out/assets",
    "lint": "next lint"
  },
  "dependencies": {
    "@prisma/client": "^3.8.1",
    "cors": "^2.8.5",
    "next": "12.0.8",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/node": "17.0.12",
    "@types/react": "17.0.38",
    "eslint": "8.7.0",
    "eslint-config-next": "12.0.8",
    "npm-watch": "^0.11.0",
    "prisma": "^3.8.1",
    "typescript": "4.5.5"
  },
  "watch": {
    "build": {
      "patterns": [
        ".",
        "styles/**",
        "pages/**",
        "public/**"
      ],
      "ignore": [
        "out",
        "node_modules",
        ".next"
      ],
      "extensions": [
        "js",
        "json",
        "lock",
        "tsx",
        "ts"
      ]
    }
  }
}
